#map {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 0;
}
.scan-btn {
  width: 300rpx;
  height: 110rpx;
  position: absolute;
  bottom: 70rpx;
  left: 0;
  right: 0;
  margin: auto;
  z-index: 1;
}

.scan-btn:active,
.position-btn:active {
  opacity: 0.9;
}

.position-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  position: absolute;
  bottom: 80rpx;
  left: 20rpx;
  margin: auto;
  z-index: 1;
}

.feedback-btn {
  left: auto;
  right: 20rpx;
}
