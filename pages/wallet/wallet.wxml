<view class="weui-cells weui-cells_after-title">
  <navigator url="/pages/deposit/deposit" class="weui-cell weui-cell_access">
    <view class="weui-cell__bd">押金</view>
    <view class="weui-cell__ft weui-cell__ft_in-access">{{deposit?'已':'未'}}缴纳</view>
  </navigator>
  <navigator url="/pages/charge/charge" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
    <view class="weui-cell__bd">余额</view>
    <view class="weui-cell__ft weui-cell__ft_in-access">{{balance}}</view>
  </navigator>
  <navigator url="/pages/vip/vip" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
    <view class="weui-cell__bd">骑行卡有效期</view>
    <view class="weui-cell__ft weui-cell__ft_in-access">{{vip}}</view>
  </navigator>
</view>
