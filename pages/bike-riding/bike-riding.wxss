.map-box {
  width: 100%;
  height: 70vh;
  position: relative;
  z-index: 1;
}

.riding-info {
  width: 100%;
  margin-top: -50rpx;
  height: calc(100% - 70vh + 50rpx);
  background: #fff;
  position: relative;
  z-index: 2;
  box-shadow: 0px -4px 13px 0px rgba(0, 0, 0, 0.2);
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

.riding-time {
  width: 100%;
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  padding-top: 10rpx;
  margin-bottom: 10rpx;
}

.riding-text {
  font-size: 28rpx;
  color: #999;
  padding-bottom: 10rpx;
}
